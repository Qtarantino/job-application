{% extends 'base.html.twig' %}

{% block title %}Interact - Test{% endblock %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top" style="">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    {% image '@AppBundle/Resources/public/images/logo-interact.png' %}
                    <img src="{{ asset_url }}" alt="Example" width="100px" style="margin-top: -10px"/>
                    {% endimage %}
                </a>

            </div>
        </div>
    </nav>
    < class="content" style="margin-top: 7%">
    <div class="page-header">
        <h1>Comparative taxes</h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Nouvel Article</h2>
            {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.description) }}
            {{ form_row(form.montant_ht, {'type':'float'}) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="col-md-12">
        {% if copiedArt %}
            <div class="container">
                <h2>Articles</h2>
                <label class="radio-inline"><input type="radio" name="optradio" value="opt1" checked>Tous les
                    montants</label>
                <label class="radio-inline"><input type="radio" name="optradio" value="opt2">Montant: TTC Taux
                    1</label>
                <label class="radio-inline"><input type="radio" name="optradio" value="opt3">Montant: TTC Taux
                    2</label>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Label</th>
                        <th>Description</th>
                        <th class="ht" style="display: none">Montant HT</th>
                        <th class="ttc1" style="display: none">Montant TTC Taux 1</th>
                        <th class="ttc2" style="display: none">Montant TTC Taux 2</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for art in copiedArt %}
                        <tr>
                            <td>{{ art.creation }}</td>
                            <td>{{ art.nom }}</td>
                            <td>{{ art.description }}</td>
                            <td class="ht" style="display: none">{{ art.amountHT }}</td>
                            <td class="ttc1" style="display: none">{{ art.amountTTC1 }}</td>
                            <td class="ttc2" style="display: none">{{ art.amountTTC2 }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        if (jQuery('input[value=opt1]:checked').length > 0) {
            jQuery('.ht').show();
            jQuery('.ttc1').show();
            jQuery('.ttc2').show();
        }
        else if (jQuery('input[value=opt2]:checked').length > 0) {
            jQuery('.ht').hide();
            jQuery('.ttc1').show();
            jQuery('.ttc2').hide();
        }
        else if (jQuery('input[value=opt3]:checked').length > 0) {
            jQuery('.ht').hide();
            jQuery('.ttc1').hide();
            jQuery('.ttc2').show();
        }

        jQuery('input[name=optradio]').change(function () {
            var selected = jQuery(this).val();
            console.log(selected);
            if (selected == 'opt1') {
                jQuery('.ht').show();
                jQuery('.ttc1').show();
                jQuery('.ttc2').show();
            }
            else if (selected == 'opt2') {
                jQuery('.ht').hide();
                jQuery('.ttc1').show();
                jQuery('.ttc2').hide();
            }
            else if (selected == 'opt3') {
                jQuery('.ht').hide();
                jQuery('.ttc1').hide();
                jQuery('.ttc2').show();
            }
        });
    </script>
{% endblock %}